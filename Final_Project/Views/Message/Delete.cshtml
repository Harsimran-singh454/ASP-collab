@model Final_Project.Models.MessageDto
@{
    ViewBag.Title = "Delete Message";
}

<h2>Delete Message</h2>


<div>
    <p>Are you Sure you want to delete this Message? </p>
    <form action="/Message/DeleteConfirm/@Model.MessageId" method="post">
        <input type="hidden" name="GroupId" value="@Model.GroupId" />
        <input type="submit" name="name" class="btn btn-danger" value="Yes" />
    </form>
    <a href="/Groups/Details/@Model.GroupId" class="btn bg-danger">No</a>
</div>